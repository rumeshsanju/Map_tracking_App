<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#876100"
    tools:context=".Address">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="372dp"
        android:layout_height="448dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/e1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="Exit"
            android:backgroundTint="#876100"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/mapPin"
            android:layout_width="20dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:src="@drawable/pin" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="262dp"
        android:layout_height="80dp"
        android:fontFamily="serif"
        android:text=""
        android:textColor="#21DAF3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Address"
        android:textColor="#EDEDF1"
        android:textColorLink="#FFEB3B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

</androidx.constraintlayout.widget.ConstraintLayout>


